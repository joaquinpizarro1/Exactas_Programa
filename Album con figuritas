import random

# EJERCICIO 1

def cuantas_figus(figus_total):
   
    album = [0]*figus_total
    contador = 0
    while sum (album) < len(album):
        figu= random.randint(0, len (album) - 1)
        album[figu] = 1 
        contador = contador + 1
    return contador

