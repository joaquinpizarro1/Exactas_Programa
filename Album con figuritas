# EJERCICIO 3

def cantidad_figus_esperada(N):
    terminos = []
    denominador = 1
    while denominador <= N:
        terminos.append(N/denominador)
        denominador = denominador + 1
    cantidad_esperada = sum(terminos) 
    return cantidad_esperada

# EJERCICIO 4
    
def dame_chance(resultados, cantidad_maxima):
    contador_exitos=0
    i=0
    while i < len(resultados):
        if resultados[i] <= cantidad_maxima:
            contador_exitos = contador_exitos + 1
        i = i + 1
    chance = contador_exitos / len(resultados)
    return chance

# EJERCICIO 5 
    
def lista_figus(figus_total, n_rep):
    mis_resultados = []

    cantidad_repeticiones_hechas = 0
    while cantidad_repeticiones_hechas < n_rep:
        resultado = cuantas_figus(figus_total)
        mis_resultados.append(resultado)
        cantidad_repeticiones_hechas = cantidad_repeticiones_hechas + 1
        figus = sum(mis_resultados)
        print (figus)
    return figus


def simular_chances(figus_total, cantidad_max, n_rep):
    nueva_lista = []
    a = 0
    while a < n_rep :
        x = lista_figus(figus_total, n_rep)
        nueva_lista.append(x)
        a = a + 1
    verificar_chances = dame_chance(nueva_lista,cantidad_max)    
